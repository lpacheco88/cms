<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= evento.title %>" />
</div>

<div>
  <label>name</label>
  <input type="text" name="name" value="<%= evento.name %>" />
</div>

<div>
  <label>Data do evento</label>
  <input
    type="date"
    name="publishDate"
    value="<%= evento.publishDate == null ? '': evento.publishDate.toISOString().split('T')[0] %>"
  />
</div>

<div>
  <label>Descrição do evento</label>
  <textarea name="description"><%=evento.description%></textarea>
</div>

<div>
  <label>Foto do evento</label>
  <input type="file" name="imgEvento" class="filepond" />
</div>
